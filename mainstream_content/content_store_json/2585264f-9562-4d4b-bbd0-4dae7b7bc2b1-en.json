    "related_to_step_navs": [
      {
        "api_path": "/api/content/get-undergraduate-student-loan",
        "api_url": "https://www.gov.uk/api/content/get-undergraduate-student-loan",
        "base_path": "/get-undergraduate-student-loan",
        "content_id": "18045f76-ac04-41b7-b147-5687d8fbb64a",
        "details": {
          "step_by_step_nav": {
            "steps": [
              {
                "contents": [
                  {
                    "contents": [
                      {
                        "href": "/student-finance/who-qualifies",
                        "text": "Check if you're eligible for student finance"
                      }
                    ],
                    "type": "list"
                  },
                  {
                    "text": "There’s a different process if you’re a student from:",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "http://www.saas.gov.uk/",
                        "text": "Scotland"
                      },
                      {
                        "href": "http://www.studentfinancewales.co.uk/",
                        "text": "Wales"
                      },
                      {
                        "href": "http://www.studentfinanceni.co.uk/",
                        "text": "Northern Ireland"
                      },
                      {
                        "href": "http://www.gov.je/Working/Careers/16To19YearOlds/EnteringHigherEducation/FinancingHigherEducationCourses/FundingDegreeProfessionalQualifications/Pages/index.aspx",
                        "text": "Jersey"
                      },
                      {
                        "href": "http://www.education.gg/article/2127/Funding-for-University)",
                        "text": "Guernsey"
                      },
                      {
                        "href": "https://www.gov.im/student-grants",
                        "text": "Isle of Man"
                      }
                    ],
                    "style": "choice",
                    "type": "list"
                  }
                ],
                "title": "Check if you're eligible"
              },
              {
                "contents": [
                  {
                    "text": "Find out the maximum tuition fee and maintenance loan you could get if you're a:",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/student-finance/new-fulltime-students",
                        "text": "new full-time student"
                      },
                      {
                        "href": "/student-finance/continuing-fulltime-students",
                        "text": "continuing full-time student"
                      },
                      {
                        "href": "/student-finance/parttime-students",
                        "text": "part-time student"
                      },
                      {
                        "href": "/student-finance/eu-students",
                        "text": "EU student"
                      },
                      {
                        "href": "/student-finance-for-existing-students",
                        "text": "student who started before 1 August 2016"
                      }
                    ],
                    "style": "choice",
                    "type": "list"
                  },
                  {
                    "text": "How much maintenance loan you get depends on where you'll study and your household income.",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/student-finance-calculator",
                        "text": "Use the student finance calculator to estimate your maintenance loan"
                      }
                    ],
                    "type": "list"
                  },
                  {
                    "text": "You'll have to pay back any loan you get.",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/repaying-your-student-loan/what-you-pay",
                        "text": "Find out how much you'll repay"
                      },
                      {
                        "href": "/repaying-your-student-loan/when-you-start-and-finish-repaying",
                        "text": "Find out when you'll start repaying"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Find out how much loan you could get"
              },
              {
                "contents": [
                  {
                    "text": "You might be able to get extra money if you:",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "https://www.standalone.org.uk/guides/student-guide/",
                        "text": "are under 25, have no contact with your parents and support yourself"
                      },
                      {
                        "href": "/childcare-grant",
                        "text": "pay for childcare"
                      },
                      {
                        "href": "/parents-learning-allowance",
                        "text": "are a full-time student with children"
                      },
                      {
                        "href": "/adult-dependants-grant",
                        "text": "have an adult who depends on you financially"
                      },
                      {
                        "href": "/disabled-students-allowances-dsas",
                        "text": "have a disability, mental or physical health problem or learning difficulty like dyslexia"
                      }
                    ],
                    "style": "choice",
                    "type": "list"
                  },
                  {
                    "text": "You might also be able to get other financial help, for example from your university or the government.",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/student-finance/extra-help",
                        "text": "Find out about extra help"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "logic": "and",
                "title": "Check if you can get extra help"
              },
              {
                "contents": [
                  {
                    "contents": [
                      {
                        "href": "/apply-for-student-finance/when",
                        "text": "Check when you can apply"
                      },
                      {
                        "href": "/apply-for-student-finance/proof-of-identity",
                        "text": "Check what ID you'll need"
                      },
                      {
                        "href": "/apply-for-student-finance/household-income",
                        "text": "Check if you need to give proof of your household income"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Prepare your application"
              },
              {
                "contents": [
                  {
                    "contents": [
                      {
                        "href": "/apply-online-for-student-finance",
                        "text": "Apply online"
                      }
                    ],
                    "type": "list"
                  },
                  {
                    "text": "You'll need to create a student finance account if you're a new student or sign into an existing account if you're a returning student. ",
                    "type": "paragraph"
                  },
                  {
                    "text": "It can take up to 6 weeks to process your application. You might have to provide extra evidence.",
                    "type": "paragraph"
                  }
                ],
                "title": "Apply"
              },
              {
                "contents": [
                  {
                    "text": "You must update your application if your circumstances change. For example if you:",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "text": "change your course through clearing"
                      },
                      {
                        "text": "change where you're going to live - for example with your parents instead of halls"
                      }
                    ],
                    "style": "choice",
                    "type": "list"
                  },
                  {
                    "contents": [
                      {
                        "href": "/apply-for-student-finance/change-an-application",
                        "text": "Find out how to update your application"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Update your details if your circumstances change"
              },
              {
                "contents": [
                  {
                    "text": "After you register at your university or college you'll usually get your maintenance loan paid directly into your bank account at the start of each term. ",
                    "type": "paragraph"
                  },
                  {
                    "text": "Use your student finance account to:",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "text": "update your bank details - for example if you open a student account"
                      },
                      {
                        "text": "check how much you'll be paid"
                      },
                      {
                        "text": "check when you'll be paid"
                      }
                    ],
                    "style": "choice",
                    "type": "list"
                  },
                  {
                    "contents": [
                      {
                        "href": "/student-finance-register-login",
                        "text": "Sign in to your student finance account"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Make sure you can be paid"
              },
              {
                "contents": [
                  {
                    "text": "You'll need to reapply for student finance for each year of your course. ",
                    "type": "paragraph"
                  },
                  {
                    "text": "You must keep your details up to date throughout your course because some changes can affect your loan payments, for example if your household income or bank details change.",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/apply-for-student-finance/change-an-application",
                        "text": "Check how to update your details"
                      },
                      {
                        "href": "/student-finance-if-you-suspend-or-leave",
                        "text": "Find out what to do if you suspend or leave your course"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Check what to do while you're studying"
              },
              {
                "contents": [
                  {
                    "text": "When you stop studying the Student Loans Company (SLC) will create a student loans repayment account for you.",
                    "type": "paragraph"
                  },
                  {
                    "text": "Make sure your contact details are up to date in your repayment account. The log in details will be the same as for your student finance account.",
                    "type": "paragraph"
                  },
                  {
                    "contents": [
                      {
                        "href": "/sign-in-to-manage-your-student-loan-balance",
                        "text": "Sign in to your student loan repayment account"
                      },
                      {
                        "href": "/repaying-your-student-loan/update-your-employment-details",
                        "text": "Update your employment details"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Check what to do when you stop studying"
              },
              {
                "contents": [
                  {
                    "contents": [
                      {
                        "href": "/repaying-your-student-loan/what-you-pay",
                        "text": "Find out how much you'll repay"
                      },
                      {
                        "href": "/repaying-your-student-loan/when-you-start-and-finish-repaying",
                        "text": "Find out when you'll start repaying"
                      }
                    ],
                    "type": "list"
                  }
                ],
                "title": "Repay your loan"
              }
            ],
            "title": "Get undergraduate student finance: step by step"
          }
